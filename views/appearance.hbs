<article class="appearance" data-id="{{ item.id }}">
    <figure class="appearance-left">
        <img alt="image of person" src="{{ item.image.url }}">
        {{#each item.product_occurrences}}
            <div class="product-indicator" style="top: {{position.y}}%; left: {{position.x}}%;" data-uuid="{{product.id}}"></div>
        {{/each}}
    </figure>
    <article class="appearance-right">
        <h2><img class="avatar" src="{{ item.subject.avatar.url }}"> {{ item.subject.name }}</h2>
        <h1>{{ item.title }}</h1>

        <div class="appearance-products">
            <h1>Products</h1>
            <section class="appearance-products-inner">
                {{#each products}}
                    <div class="product" data-uuid="{{id}}">
                        <figure class="actual">
                            <div class="image">
                                <h1>Actual</h1>
                                <img src="{{image.url}}">
                            </div>
                            <figcaption class="info">
                                <h1>{{ name }}</h1>
                                <h2>{{ brand.name }}</h2>
                            </figcaption>
                        </figure>
                        {{#each similars}}
                            <figure class="similar">
                                <div class="image">
                                    <h1>{{ similar_type }}</h1>
                                    <img src="{{image.url}}">
                                </div>
                                <figcaption class="info">
                                    <h1>{{ name }}</h1>
                                    <h2>{{ brand.name }}</h2>
                                </figcaption>
                            </figure>
                        {{/each}}
                    </div>
                {{/each}}
            </section>
        </div>
    </article>
</article>
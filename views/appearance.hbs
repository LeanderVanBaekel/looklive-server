<section class="appearance" data-id="{{ item.id }}">
    
    <div class="appearance__left">
        
        <img src="{{ item.image.url }}">
        
        {{#each item.product_occurrences}}
            <div class="appearance__indicator" style="top: {{position.y}}%; left: {{position.x}}%;" data-uuid="{{product.id}}"></div>
        {{/each}}

    </div>

    <div class="appearance__right">
        
        <h2 class="title"><img src="{{ item.subject.avatar.url }}"> {{ item.subject.name }}</h2>
        <h1>{{ item.title }}</h1>

        <div class="appearance__products">
            
            <h1 class="-line">Products</h1>

            <div class="appearance__inner">
                
                {{#each products}}
                    <div class="appearance__product" data-uuid="{{id}}">
                        
                        <div class="appearance__product-item -line">
                            
                            <div class="appearance__product-img">
                                <h1 class="-h2">Actual</h1>
                                <img src="{{image.url}}">
                            </div>

                            <div class="appearance__product-info">
                                <h1 class="-h2">{{ name }}</h1>
                                <h2>{{ brand.name }}</h2>
                            </div>

                        </div>
                        
                        {{#each similars}}
                            <div class="appearance__product-item -line">
                                
                                <div class="appearance__product-img">
                                    <h1 class="-h2">{{ similar_type }}</h1>
                                    <img class="-similar" src="{{image.url}}">
                                </div>

                                <div class="appearance__product-info">
                                    <h1 class="-h2">{{ name }}</h1>
                                    <h2>{{ brand.name }}</h2>
                                </div>

                            </div>
                        {{/each}}

                    </div>
                {{/each}}

            </div>

        </div>
    </div>

</section>